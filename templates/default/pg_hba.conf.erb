# TYPE           DATABASE    USER               CIDR-ADDRESS             METHOD
<% node.postgresql.hba.each do |h| %>
<%= h["type"] %> all         <%= h["user"] %>  <%= h["address"] || "" %> <%= h["method"] %>
<% end %>

<% node.postgresql.standby_ips.each do |ip| %>
host        replication all         <%= ip -%>/32       trust
<% end %>
